{
  "manifest_version": 3,
  "name": "Github Project Pane Expander",
  "version": "1.0.0",
  "description": "Automatically expand the Github Project pane on PRs.",

  /* If you know your exact root ahead of timeâ€¦ */
  "content_scripts": [
    {
      "matches": [
        "https://github.com/honeycombio/*/pull/*"
      ],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
